{
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/async": "jsr:@std/async@^1.0.14"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "camelcase",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-eval",
        "no-sparse-arrays",
        "single-var-declarator",
      ],
    }
  },
  "tasks": {
    "build": "deno bundle src/index.ts -o www/index.js --platform browser --minify",
    "watch": "deno bundle src/index.ts -o www/index.js --platform browser --watch",
  },
}
